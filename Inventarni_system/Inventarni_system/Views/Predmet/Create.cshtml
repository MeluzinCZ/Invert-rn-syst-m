@model Inventarni_system.Models.Predmet

@{
    ViewData["Title"] = "Vytvořit Nový Předmět";
}

<h1>@ViewData["Title"]</h1>

<h4>Předmět</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazev" class="control-label"></label>
                <input asp-for="Nazev" class="form-control" />
                <span asp-validation-for="Nazev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mnozstvi" class="control-label"></label>
                <input asp-for="Mnozstvi" class="form-control" />
                <span asp-validation-for="Mnozstvi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CenaZaKus" class="control-label"></label>
                <input asp-for="CenaZaKus" class="form-control" />
                <span asp-validation-for="CenaZaKus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkladId" class="control-label"></label>
                <select asp-for="SkladId" class="form-control" asp-items="ViewBag.SkladId">
                    <option value="">-- Vyberte sklad --</option>
                </select>
                <span asp-validation-for="SkladId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Zpět</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<Inventarni_system.Models.Predmet>

@{
    ViewData["Title"] = "Předměty";
}

<h2>Předměty</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Přidat nový předmět</a>
</div>

<form method="get" asp-controller="Predmet" asp-action="Index">
    <div class="form-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Hledat předmět...">
        <button type="submit" class="btn btn-primary mt-2">Vyhledat</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Název</th>
            <th>Množství</th>
            <th>Cena za kus</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nazev</td>
                <td>@item.Mnozstvi</td>
                <td>@item.CenaZaKus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Upravit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

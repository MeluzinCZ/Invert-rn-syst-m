@model Inventarni_system.Models.Predmet

@{
    ViewData["Title"] = "Smazat Předmět";
}

<h1>@ViewData["Title"]</h1>

<h3>Opravdu chcete smazat tento předmět?</h3>
<div>
    <h4>Předmět</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nazev)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nazev)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mnozstvi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mnozstvi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CenaZaKus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CenaZaKus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Sklad")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sklad.Nazev)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <br />
        <button type="submit" class="btn btn-danger">Smazat</button>
        <a asp-action="Index" class="btn btn-secondary">Zpět</a>
    </form>
</div>
